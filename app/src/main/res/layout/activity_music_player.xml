<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/song_cover"
        android:transitionName="@string/cover_transition"
        android:layout_width="300dp"
        android:layout_height="300dp"
        tools:src="@drawable/broken_image"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mambo No. 5"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/song_cover"
        app:layout_constraintRight_toRightOf="@+id/song_cover"
        app:layout_constraintLeft_toLeftOf="@+id/song_cover"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/song_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hit song from 1999!"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/song_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/song_title"
        app:layout_constraintLeft_toLeftOf="@+id/song_title"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/song_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Stream"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/song_cover"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/song_cover" />

</android.support.constraint.ConstraintLayout>